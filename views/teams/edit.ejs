<% layout('layouts/boilerplate')%>


    <div class="row">
        <h1 class="text-center">Edit Team</h1>
        <div class="col-6 offset-3">
            <form action="/teams/<%=team._id%>?_method=PUT" method="POST" novalidate class="validated-form">

                <div class="mb-3">
                    <label class="form-label" for="title">Team Name</label>
                    <input class="form-control" type="text" id="title" name="team[title]" value="<%=team.title %>"
                        required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">Please provide a team name.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="team[location]"
                        value="<%=team.location %>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">Please provide a location.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="team[image]" value="<%=team.image %>"
                        required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">Please provide a valid img.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="cost">Team Cost</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="cost" placeholder="0.00" aria-label="cost"
                            aria-describedby="cost-label" name="team[cost]" value="<%=team.cost %>" required>
                    </div>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">Please provide cost.</div>
                </div>

                <div class=" mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="team[description]"
                        required><%= team.description%></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">Please provide description.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="sport">Sport</label>
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" type="text"
                        id="sport" name="team[sport]" class="form-label" aria-label="sport"
                        aria-describedby="form-label" value="<%=team.sport %>" required aria-label="select example">
                        <option selected disabled></option>
                        <option aria-valuetext="team">Soccer</option>
                        <option aria-valuetext="team">Basketball</option>
                        <option aria-valuetext="team">Baseball</option>
                        <option aria-valuetext="team">Hockey</option>
                        <option aria-valuetext="team">Lacross</option>
                        <option aria-valuetext="team">Hockey</option>
                        <option aria-valuetext="team">Dodgeball</option>
                        <option aria-valuetext="team">Rugby</option>
                        <option aria-valuetext="team">E-SPORTS</option>
                        <option aria-valuetext="team">Flag Football</option>
                        <option aria-valuetext="team">Water Polo</option>
                    </select>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">Please provide sport.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="league">League</label>
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" type="text"
                        id="league" name="team[league]" class="form-label" aria-label="league"
                        aria-describedby="form-label" value="<%=team.league %>" required aria-label="select example">
                        <option selected disabled></option>
                        <option aria-valuetext="team">Mens</option>
                        <option aria-valuetext="team">Womans</option>
                        <option aria-valuetext="team">Co-ed</option>
                        <option aria-valuetext="team">Special</option>
                    </select>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">Please provide league.</div>
                </div>

                </league <div class="mb-3">
                <label class="form-label" for="level">Level</label>
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" type="text"
                    id="level" name="team[level]" class="form-label" aria-label="level" aria-describedby="form-label"
                    value="<%=team.level %>" required aria-label="select example">
                    <option selected disabled></option>
                    <option aria-valuetext="team">Gold</option>
                    <option aria-valuetext="team">Silver</option>
                    <option aria-valuetext="team">Bronze</option>
                    <option aria-valuetext="team">Not Applicable</option>
                </select>
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <div class="invalid-feedback">Please provide level.</div>
        </div>

        <div class="mb-3">
            <button class="btn btn-info">Update Team</button>
        </div>
        </form>
        <a href="/teams/<%= team._id%>"">Back to Team</a>
    </div>
    </div>